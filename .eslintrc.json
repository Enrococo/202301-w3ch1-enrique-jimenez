{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2]
  },
  "ignorePatterns": ["**public/**/*.js", "jest.config.ts"]
}
